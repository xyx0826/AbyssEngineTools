<Window x:Class="Kaamo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kaamo"
        mc:Ignorable="d"
        Title="Kaamo" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Window.CommandBindings>
        <CommandBinding Command="{x:Static local:MainWindow.OpenFileCommand}"
                        Executed="ExecutedOpenFileCommand"/>
    </Window.CommandBindings>
    <Grid>
        <StackPanel>
            <Button Content="Open file" Command="{x:Static local:MainWindow.OpenFileCommand}"/>
            <Image Source="{Binding Path=ImageSource, Mode=OneWay}"/>
        </StackPanel>
    </Grid>
</Window>
